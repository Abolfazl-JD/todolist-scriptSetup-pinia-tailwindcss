{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": [
    "dist",
    "node_modules",
    "test",
    "test.ts",
    "**/*.spec.ts",
    "**/*.worker.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "vite-plugin-pwa/client"
    ],
    "lib": ["ESNext", "DOM", "WebWorker"],
  },

  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}
